<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" style="-fx-background-color: #F4F6F8;" stylesheets="@css/starred.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.StarredController"> <padding>
    <Insets bottom="20" left="30" right="30" top="20" />
</padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #212B36;" text="Starred Files" />

        <Region HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);">
            <padding><Insets bottom="5" left="15" right="10" top="5" /></padding>
            <ImageView fitHeight="18" fitWidth="18" opacity="0.5">
                <image><Image url="@imgs/folder.png" /></image> </ImageView>
            <TextField fx:id="searchField" prefHeight="35" prefWidth="798.0" promptText="Search files..." style="-fx-background-color: transparent; -fx-prompt-text-fill: #919EAB; -fx-text-fill: #212B36;" />
        </HBox>

        <ImageView fitHeight="40" fitWidth="40">
            <image><Image url="@imgs/man.png" /></image>
        </ImageView>
    </HBox>

    <Separator opacity="0.5" />

    <GridPane styleClass="table-header">
        <columnConstraints>
            <ColumnConstraints percentWidth="50" /> <ColumnConstraints percentWidth="20" /> <ColumnConstraints percentWidth="15" /> <ColumnConstraints halignment="CENTER" percentWidth="15" /> </columnConstraints>

        <Label text="NAME" GridPane.columnIndex="0" />
        <Label text="OWNER" GridPane.columnIndex="1" />
        <Label text="SIZE" GridPane.columnIndex="2" />
        <Label text="ACTION" GridPane.columnIndex="3" />
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <ListView fx:id="fileListView" styleClass="flat-list" VBox.vgrow="ALWAYS" />
</VBox>
