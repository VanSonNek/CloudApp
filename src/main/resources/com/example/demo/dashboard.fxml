<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="750" prefWidth="1200" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.DashboardController">

    <!-- ========= SIDEBAR ========= -->
    <left>
        <VBox prefWidth="200" spacing="20" style="-fx-background-color: #FFFFFF;">

            <!-- Logo Area -->
            <VBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ImageView fitHeight="32" fitWidth="32">
                        <image>
                            <Image url="@imgs/cloud.png" />
                        </image>
                    </ImageView>
                    <Label alignment="TOP_LEFT" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Skybox." />
                </HBox>
            </VBox>

            <!-- Menu Buttons -->
            <VBox spacing="15">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="1" />
                </padding>

                <Button alignment="TOP_LEFT" graphicTextGap="10" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 15px;" text="Dashboard">
                    <graphic>
                        <ImageView fx:id="iconDashboard" fitHeight="18" fitWidth="18">
                            <image>
                                <Image url="@imgs/home.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" graphicTextGap="10" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 15px;" text="All File">
                    <graphic>
                        <ImageView fx:id="iconFile" fitHeight="18" fitWidth="18">
                            <image>
                                <Image url="@imgs/folder2.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" graphicTextGap="10" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 15px;" text="Shared with Me">
                    <graphic>
                        <ImageView fx:id="iconShared" fitHeight="18" fitWidth="18">
                            <image>
                                <Image url="@imgs/manyavt.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" graphicTextGap="10" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 15px;" text="Inbox">
                    <graphic>
                        <ImageView fx:id="iconInbox" fitHeight="18" fitWidth="18">
                            <image>
                                <Image url="@imgs/chat2.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" graphicTextGap="10" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 15px;" text="Recent">
                    <graphic>
                        <ImageView fx:id="iconRecent" fitHeight="18" fitWidth="18">
                            <image>
                                <Image url="@imgs/clock.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" graphicTextGap="10" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 15px;" text="Starred">
                    <graphic>
                        <ImageView fx:id="iconStar" fitHeight="18" fitWidth="18">
                            <image>
                                <Image url="@imgs/star.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button alignment="TOP_LEFT" graphicTextGap="10" prefWidth="200" style="-fx-background-color: transparent; -fx-font-size: 15px;" text="Trash">
                    <graphic>
                        <ImageView fx:id="iconTrash" fitHeight="18" fitWidth="18">
                            <image>
                                <Image url="@imgs/trash.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            </VBox>

            <!-- Spacer đẩy Upgrade Card xuống cuối sidebar -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Upgrade Card -->
            <VBox prefWidth="180" spacing="20" style="-fx-background-color: #FFFFFF;">

                <!-- Các menu buttons ở đây -->

                <!-- Upgrade Card -->
                <VBox prefHeight="220.0" prefWidth="200.0" spacing="10" style="-fx-background-color: #3ea9f0; -fx-background-radius: 12;">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="64% Used" />
                    <Label text="640 GB of 1000 GB Used" />
                    <Region VBox.vgrow="ALWAYS" />
                    <Label alignment="BOTTOM_CENTER" prefHeight="18.0" prefWidth="158.0" text="Upgrade Premium to">
                  <font>
                     <Font size="15.0" />
                  </font></Label>
                    <Label alignment="BOTTOM_CENTER" prefHeight="18.0" prefWidth="158.0" text="Get more Space">
                  <font>
                     <Font size="15.0" />
                  </font></Label>
                    <Button prefWidth="150" style="-fx-background-color: #FFF; -fx-text-fill: black; -fx-background-radius: 3;" text="Upgrade Now">
                        <VBox.margin><Insets bottom="10" /></VBox.margin>
                    </Button>
                </VBox>

                <!-- Spacer dưới card để đẩy card lên -->
                <Region VBox.vgrow="ALWAYS" />
            </VBox>



        </VBox>
    </left>
    <!-- ========= MAIN CONTENT ========= -->
    <center>
        <VBox spacing="25" style="-fx-background-color: #F2F2F2;">
            <padding>
                <Insets bottom="20" left="0" right="0" top="0" />
            </padding>
            <!-- HEADER WRAPPER -->
            <HBox alignment="CENTER">
                <HBox alignment="CENTER_LEFT" maxWidth="1003.0" prefHeight="70.0" prefWidth="995.0" spacing="25" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;">

                    <padding>
                        <Insets bottom="15" left="15" right="25" top="15" />
                    </padding>

                    <!-- Spacer đẩy toàn bộ phần còn lại qua phải -->
                    <Region HBox.hgrow="ALWAYS" />

                    <HBox prefWidth="740">
                        <TextField prefHeight="40.0" prefWidth="717.0" promptText="Search in Skybox" style="-fx-background-radius: 10; -fx-padding: 8;" />
                    </HBox>

                    <ImageView fitHeight="20" fitWidth="20">
                        <image><Image url="@imgs/bell.png" /></image>
                    </ImageView>

                    <ImageView fitHeight="25" fitWidth="25">
                        <image><Image url="@imgs/man.png" /></image>
                    </ImageView>

                </HBox>
            </HBox>




            <!-- TOP CARDS -->
            <HBox alignment="TOP_CENTER" spacing="20">
                <!-- Storage Card -->
                <HBox fx:id="storageCard" prefHeight="136.0" prefWidth="351.0" spacing="20" style="-fx-background-color: #FFD43B; -fx-background-radius: 15;">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <!-- Vòng tròn phần trăm -->
                    <StackPane fx:id="storageCircle" />

                    <!-- Text bên cạnh -->
                    <VBox alignment="CENTER_LEFT" spacing="5">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Storage" />
                        <Label style="-fx-font-size: 15px;" text="770.5 GB / 1000 GB" />
                    </VBox>

                </HBox>

                <!-- Transfer Card -->
                <HBox fx:id="transferCard" prefHeight="136.0" prefWidth="350.0" spacing="20" style="-fx-background-color: #A78BFA; -fx-background-radius: 15;">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <!-- Vòng tròn phần trăm -->
                    <StackPane fx:id="transferCircle" />

                    <!-- Text bên cạnh -->
                    <VBox alignment="CENTER_LEFT" spacing="5">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Transfer" />
                        <Label style="-fx-font-size: 15px;" text="100 GB / 1000 GB" />
                    </VBox>

                </HBox>
            </HBox>



            <!-- USED STORAGE WRAPPER -->
            <HBox alignment="CENTER">
                <VBox maxWidth="766.0" prefHeight="113.0" prefWidth="721.0" spacing="10" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10;">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>

                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Used Storage" />

                    <HBox alignment="CENTER" prefWidth="571.0" spacing="30">
                        <Label alignment="TOP_LEFT" contentDisplay="TEXT_ONLY" prefHeight="18.0" prefWidth="127.0" text="77% Cloud Drive" />
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="414.0" text="9% Trash" />
                        <Label alignment="TOP_RIGHT" prefHeight="18.0" prefWidth="115.0" text="14% Available" />
                    </HBox>

                    <ProgressBar fx:id="usedStorageBar" prefHeight="16.0" prefWidth="692.0" progress="0.7" style="-fx-accent: #3ea9f0;" />
                </VBox>
            </HBox>



            <!-- RECENT ADDED WRAPPER -->
            <HBox alignment="CENTER">
                <VBox maxWidth="765.0" prefHeight="254.0" prefWidth="721.0" spacing="15" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12;">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Recent Added" />

                    <!-- File Project -->
                    <HBox spacing="15" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-border-color: rgba(0,0,0,0.1); -fx-border-width: 1; -fx-border-radius: 10;">
                        <padding>
                            <Insets bottom="15" left="15" right="15" top="15" />
                        </padding>
                        <ImageView fitHeight="24" fitWidth="24">
                            <image><Image url="@imgs/file.png"/></image>
                        </ImageView>
                        <Label text="File Project" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Label text="600 MB" />
                        <Label text="10/06/2022" />
                    </HBox>

                    <!-- New Folder -->
                    <HBox spacing="15" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-border-color: rgba(0,0,0,0.1); -fx-border-width: 1; -fx-border-radius: 10;">
                        <padding>
                            <Insets bottom="15" left="15" right="15" top="15" />
                        </padding>
                        <ImageView fitHeight="24" fitWidth="24">
                            <image><Image url="@imgs/file.png"/></image>
                        </ImageView>
                        <Label text="New Folder" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Label text="2.3 GB" />
                        <Label text="29/05/2022" />
                    </HBox>

                    <!-- My Image -->
                    <HBox spacing="15" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-border-color: rgba(0,0,0,0.1); -fx-border-width: 1; -fx-border-radius: 10;">
                        <padding>
                            <Insets bottom="15" left="15" right="15" top="15" />
                        </padding>
                        <ImageView fitHeight="24" fitWidth="24">
                            <image><Image url="@imgs/file.png"/></image>
                        </ImageView>
                        <Label text="My Image" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Label text="948 MB" />
                        <Label text="26/05/2022" />
                    </HBox>

                </VBox>
            </HBox>





        </VBox>
    </center>

</BorderPane>
