<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<VBox prefWidth="220" spacing="20"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.controller.SidebarController"
      style="-fx-background-color: #FFFFFF; -fx-padding: 20 10 20 10;">

    <!-- Load CSS -->
    <stylesheets>
        <URL value="@css/sidebar.css"/>
    </stylesheets>

    <!-- LOGO -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <ImageView fitHeight="35" fitWidth="35">
            <image><Image url="@imgs/cloud.png"/></image>
        </ImageView>

        <Label text="Skybox."
               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- MENU LIST -->
    <VBox spacing="6" prefWidth="200"
          style="-fx-padding: 10 0 0 0;">

        <Button fx:id="btnDashboard" text="Dashboard"
                graphicTextGap="12" prefHeight="44"
                styleClass="sidebar-btn">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image><Image url="@imgs/home.png"/></image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnAllFile" text="All Files"
                graphicTextGap="12" prefHeight="44"
                styleClass="sidebar-btn">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image><Image url="@imgs/folder2.png"/></image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnShared" text="Shared with Me"
                graphicTextGap="12" prefHeight="44"
                styleClass="sidebar-btn">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image><Image url="@imgs/manyavt.png"/></image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnInbox" text="Inbox"
                graphicTextGap="12" prefHeight="44"
                styleClass="sidebar-btn">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image><Image url="@imgs/chat2.png"/></image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnRecent" text="Recent"
                graphicTextGap="12" prefHeight="44"
                styleClass="sidebar-btn">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image><Image url="@imgs/clock.png"/></image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnStarred" text="Starred"
                graphicTextGap="12" prefHeight="44"
                styleClass="sidebar-btn">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image><Image url="@imgs/star.png"/></image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnTrash" text="Trash"
                graphicTextGap="12" prefHeight="44"
                styleClass="sidebar-btn">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image><Image url="@imgs/trash.png"/></image>
                </ImageView>
            </graphic>
        </Button>

    </VBox>

    <Region VBox.vgrow="ALWAYS"/>

    <!-- BOTTOM UPGRADE CARD -->
    <VBox spacing="10"
          prefWidth="200"
          style="-fx-background-color: #3EA9F0; -fx-background-radius: 14; -fx-padding: 20;">

        <Label text="64% Used"
               style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <Label text="640 GB of 1000 GB"
               style="-fx-text-fill: #EAF7FF;"/>

        <ProgressBar progress="0.64"
                     prefWidth="150"
                     style="-fx-accent: white;"/>

        <Region VBox.vgrow="ALWAYS"/>

        <Button text="Upgrade Now"
                prefWidth="150"
                style="-fx-background-color: white;
                       -fx-text-fill: #3EA9F0;
                       -fx-background-radius: 8;
                       -fx-font-weight: bold;"/>
    </VBox>

</VBox>
