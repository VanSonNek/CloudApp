<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefWidth="200" spacing="20" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.controller.SidebarController"
      style="-fx-background-color: #FFFFFF;">

    <!-- Logo Area -->
    <VBox alignment="CENTER_LEFT" spacing="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fitHeight="32" fitWidth="32">
                <image>
                    <Image url="@imgs/cloud.png"/>
                </image>
            </ImageView>
            <Label alignment="TOP_LEFT" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Skybox."/>
        </HBox>
    </VBox>

    <!-- Menu Buttons -->
    <VBox spacing="15">
        <padding>
            <Insets bottom="10" left="10" right="10" top="1"/>
        </padding>

        <Button fx:id="btnDashboard" alignment="TOP_LEFT" graphicTextGap="10"
                prefWidth="200" styleClass="sidebar-button" text="Dashboard">
            <graphic>
                <ImageView fx:id="iconDashboard" fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@imgs/home.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnAllFile" alignment="TOP_LEFT" graphicTextGap="10"
                prefWidth="200" styleClass="sidebar-button" text="All File">
            <graphic>
                <ImageView fx:id="iconFile" fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@imgs/folder2.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnShared" alignment="TOP_LEFT" graphicTextGap="10"
                prefWidth="200" styleClass="sidebar-button" text="Shared with Me">
            <graphic>
                <ImageView fx:id="iconShared" fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@imgs/manyavt.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnInbox" alignment="TOP_LEFT" graphicTextGap="10"
                prefWidth="200" styleClass="sidebar-button" text="Inbox">
            <graphic>
                <ImageView fx:id="iconInbox" fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@imgs/chat2.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnRecent" alignment="TOP_LEFT" graphicTextGap="10"
                prefWidth="200" styleClass="sidebar-button" text="Recent">
            <graphic>
                <ImageView fx:id="iconRecent" fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@imgs/clock.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnStarred" alignment="TOP_LEFT" graphicTextGap="10"
                prefWidth="200" styleClass="sidebar-button" text="Starred">
            <graphic>
                <ImageView fx:id="iconStar" fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@imgs/star.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnTrash" alignment="TOP_LEFT" graphicTextGap="10"
                prefWidth="200" styleClass="sidebar-button" text="Trash">
            <graphic>
                <ImageView fx:id="iconTrash" fitHeight="18" fitWidth="18">
                    <image>
                        <Image url="@imgs/trash.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </VBox>

    <!-- Spacer -->
    <Region VBox.vgrow="ALWAYS"/>

    <!-- Upgrade Card -->
    <VBox prefWidth="180" spacing="20" style="-fx-background-color: #FFFFFF;">
        <VBox prefHeight="220.0" prefWidth="200.0" spacing="10"
              style="-fx-background-color: #3ea9f0; -fx-background-radius: 12;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="64% Used"/>
            <Label text="640 GB of 1000 GB Used"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Label alignment="BOTTOM_CENTER" text="Upgrade Premium to">
                <font><Font size="15"/></font>
            </Label>
            <Label alignment="BOTTOM_CENTER" text="Get more Space">
                <font><Font size="15"/></font>
            </Label>

            <Button prefWidth="150"
                    style="-fx-background-color: #FFF; -fx-text-fill: black; -fx-background-radius: 3;"
                    text="Upgrade Now">
                <VBox.margin><Insets bottom="10"/></VBox.margin>
            </Button>
        </VBox>
        <Region VBox.vgrow="ALWAYS"/>
    </VBox>

</VBox>
