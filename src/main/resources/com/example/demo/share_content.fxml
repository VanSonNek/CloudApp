<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.controller.ShareController"
      stylesheets="@css/share.css"
      style="-fx-background-color: #F4F6F8;">

    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <HBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT"
                  style="-fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 3, 0, 0, 1);"
                  prefWidth="400">
                <padding><Insets top="5" right="10" bottom="5" left="15"/></padding>
                <ImageView fitHeight="16" fitWidth="16" opacity="0.5">
                    <image><Image url="@imgs/folder.png"/></image>
                </ImageView>
                <TextField fx:id="searchField"
                           prefHeight="35" HBox.hgrow="ALWAYS"
                           promptText="Search shared files..."
                           style="-fx-background-color: transparent; -fx-prompt-text-fill: #919EAB; -fx-text-fill: #212B36;"/>
            </HBox>
        </HBox>

        <ImageView fitHeight="40" fitWidth="40">
            <image><Image url="@imgs/man.png"/></image>
        </ImageView>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Shared with me" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #212B36;"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="btnBack"
                text="â† Back"
                disable="true"
                style="-fx-background-color: #FFFFFF; -fx-text-fill: #637381; -fx-background-radius: 6; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);"/>

        <Button fx:id="sortByDateBtn"
                text="Sort by Date"
                style="-fx-background-color: #FFFFFF; -fx-text-fill: #637381; -fx-background-radius: 6; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);"/>
    </HBox>

    <Separator opacity="0.5"/>

    <GridPane styleClass="table-header">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/> <ColumnConstraints percentWidth="25"/> <ColumnConstraints percentWidth="15"/> <ColumnConstraints percentWidth="10" halignment="CENTER"/> </columnConstraints>

        <Label text="NAME" GridPane.columnIndex="0"/>
        <Label text="SHARED BY" GridPane.columnIndex="1"/>
        <Label text="DATE" GridPane.columnIndex="2"/>
        <Label text="TYPE" GridPane.columnIndex="3"/>
    </GridPane>

    <ListView fx:id="shareListView"
              styleClass="flat-list"
              VBox.vgrow="ALWAYS"/>

</VBox>