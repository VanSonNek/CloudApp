<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.controller.DashboardController"
      spacing="25"
      style="-fx-background-color: #F2F2F2;"
      prefWidth="1000">

    <padding>
        <Insets top="0" bottom="20" left="0" right="0"/>
    </padding>

    <HBox alignment="CENTER">
        <HBox alignment="CENTER_LEFT" prefWidth="995" maxWidth="1003" prefHeight="70" spacing="25" style="-fx-background-color:#FFFFFF; -fx-background-radius:5;">
            <padding><Insets top="15" bottom="15" left="15" right="25"/></padding>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField prefWidth="300" prefHeight="40" promptText="Search files..." style="-fx-background-radius:10; -fx-padding:8;"/>
            <ImageView fx:id="avatarBtn" fitHeight="30" fitWidth="30" style="-fx-cursor: hand;"><image><Image url="@imgs/man.png"/></image></ImageView>
        </HBox>
    </HBox>

    <HBox alignment="TOP_CENTER" spacing="20">

        <HBox fx:id="storageCard" prefWidth="351" prefHeight="136" spacing="20"
              style="-fx-background-color:#FFD43B; -fx-background-radius:15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

            <StackPane fx:id="storageCircle"/> <VBox alignment="CENTER_LEFT" spacing="5">
            <Label text="Storage" style="-fx-font-size:20px; -fx-font-weight:bold; -fx-text-fill: #333;"/>
            <Label fx:id="lblTotalUsage" text="Checking..." style="-fx-font-size:15px; -fx-text-fill: #555;"/>
        </VBox>
        </HBox>

        <HBox fx:id="transferCard" prefWidth="350" prefHeight="136" spacing="20"
              style="-fx-background-color:#A78BFA; -fx-background-radius:15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

            <StackPane fx:id="transferCircle"/>

            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label text="Transfer" style="-fx-font-size:20px; -fx-font-weight:bold; -fx-text-fill: white;"/>
                <Label fx:id="lblTransferUsage" text="Checking..." style="-fx-font-size:15px; -fx-text-fill: #EEE;"/>
            </VBox>
        </HBox>
    </HBox>

    <HBox alignment="CENTER">
        <VBox spacing="15" prefWidth="721" maxWidth="765" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20 28 20 28;">
            <HBox alignment="CENTER_LEFT">
                <Label text="Used Storage Breakdown" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Total Limit: 10 GB" style="-fx-text-fill: #888; -fx-font-weight: bold;"/>
            </HBox>

            <HBox prefHeight="12" prefWidth="650" style="-fx-background-color: #F0F0F0; -fx-background-radius: 6;">
                <Region fx:id="barActive" style="-fx-background-color: #3EA9F0; -fx-background-radius: 6 0 0 6;" prefWidth="0"/>
                <Region fx:id="barTrash" style="-fx-background-color: #FF6257;" prefWidth="0"/>
            </HBox>

            <HBox spacing="25">
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Circle radius="5" fill="#3EA9F0"/>
                    <VBox>
                        <Label text="Active Files" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                        <Label fx:id="lblActiveSize" text="0 B" style="-fx-text-fill: #777; -fx-font-size: 11;"/>
                    </VBox>
                </HBox>

                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Circle radius="5" fill="#FF6257"/>
                    <VBox>
                        <Label text="Trash" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                        <Label fx:id="lblTrashSize" text="0 B" style="-fx-text-fill: #777; -fx-font-size: 11;"/>
                    </VBox>
                </HBox>

                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblAvailableText" text="Free: 10 GB" style="-fx-text-fill: #4CAF50; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </HBox>

    <HBox alignment="CENTER">
        <VBox prefWidth="721" maxWidth="765" spacing="15" style="-fx-background-color:#FFFFFF; -fx-background-radius:12; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT">
                <Label text="Recent Added" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="View All" style="-fx-text-fill: #3EA9F0; -fx-cursor: hand;"/>
            </HBox>

            <VBox fx:id="recentFileContainer" spacing="10"/>
        </VBox>
    </HBox>

</VBox>