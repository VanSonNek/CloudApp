<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox prefWidth="1000" spacing="25" style="-fx-background-color: #F2F2F2;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.DashboardController">

    <padding>
        <Insets bottom="20" left="0" right="0" top="0" />
    </padding>

    <HBox alignment="CENTER">
        <HBox alignment="CENTER_LEFT" maxWidth="1003" prefHeight="70" prefWidth="995" spacing="25" style="-fx-background-color:#FFFFFF; -fx-background-radius:5;">
            <padding><Insets bottom="15" left="15" right="25" top="15" /></padding>
            <Region HBox.hgrow="ALWAYS" />
            <TextField prefHeight="40" prefWidth="836.0" promptText="Search files..." style="-fx-background-radius:10; -fx-padding:8;" />
            <ImageView fx:id="avatarBtn" fitHeight="30" fitWidth="30" style="-fx-cursor: hand;"><image><Image url="@imgs/man.png" /></image></ImageView>
        </HBox>
    </HBox>

    <HBox alignment="TOP_CENTER" spacing="20">

        <HBox fx:id="storageCard" prefHeight="136" prefWidth="351" spacing="20" style="-fx-background-color:#FFD43B; -fx-background-radius:15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <StackPane fx:id="storageCircle" /> <VBox alignment="CENTER_LEFT" spacing="5">
            <Label style="-fx-font-size:20px; -fx-font-weight:bold; -fx-text-fill: #333;" text="Storage" />
            <Label fx:id="lblTotalUsage" style="-fx-font-size:15px; -fx-text-fill: #555;" text="Checking..." />
        </VBox>
        </HBox>

        <HBox fx:id="transferCard" prefHeight="136" prefWidth="350" spacing="20" style="-fx-background-color:#A78BFA; -fx-background-radius:15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <StackPane fx:id="transferCircle" />

            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-font-size:20px; -fx-font-weight:bold; -fx-text-fill: white;" text="Transfer" />
                <Label fx:id="lblTransferUsage" style="-fx-font-size:15px; -fx-text-fill: #EEE;" text="Checking..." />
            </VBox>
        </HBox>
    </HBox>

    <HBox alignment="CENTER">
        <VBox maxWidth="765" prefWidth="721" spacing="15" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20 28 20 28;">
            <HBox alignment="CENTER_LEFT">
                <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Used Storage Breakdown" />
                <Region HBox.hgrow="ALWAYS" />
                <Label style="-fx-text-fill: #888; -fx-font-weight: bold;" text="Total Limit: 10 GB" />
            </HBox>

            <HBox prefHeight="12" prefWidth="650" style="-fx-background-color: #F0F0F0; -fx-background-radius: 6;">
                <Region fx:id="barActive" prefWidth="0" style="-fx-background-color: #3EA9F0; -fx-background-radius: 6 0 0 6;" />
                <Region fx:id="barTrash" prefWidth="0" style="-fx-background-color: #FF6257;" />
            </HBox>

            <HBox spacing="25">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Circle fill="#3EA9F0" radius="5" />
                    <VBox>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Active Files" />
                        <Label fx:id="lblActiveSize" style="-fx-text-fill: #777; -fx-font-size: 11;" text="0 B" />
                    </VBox>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Circle fill="#FF6257" radius="5" />
                    <VBox>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Trash" />
                        <Label fx:id="lblTrashSize" style="-fx-text-fill: #777; -fx-font-size: 11;" text="0 B" />
                    </VBox>
                </HBox>

                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblAvailableText" style="-fx-text-fill: #4CAF50; -fx-font-weight: bold;" text="Free: 10 GB" />
            </HBox>
        </VBox>
    </HBox>

    <HBox alignment="CENTER">
        <VBox maxWidth="765" prefWidth="721" spacing="15" style="-fx-background-color:#FFFFFF; -fx-background-radius:12; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT">
                <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Recent Added" />
                <Region HBox.hgrow="ALWAYS" />
                <Label style="-fx-text-fill: #3EA9F0; -fx-cursor: hand;" text="View All" />
            </HBox>

            <VBox fx:id="recentFileContainer" spacing="10" />
        </VBox>
    </HBox>

</VBox>
